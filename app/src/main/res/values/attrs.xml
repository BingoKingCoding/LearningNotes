<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioLayout">
        <attr name="ratioWidthLayout" format="integer" />
        <attr name="ratioHeightLayout" format="integer" />
        <attr name="ratioType">
            <enum name="byWidth" value="0" />
            <enum name="byHeight" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="mn_progressIndeterminate" format="boolean" />
        <attr name="mn_barColor" format="color" />
        <attr name="mn_rimColor" format="color" />
        <attr name="mn_rimWidth" format="dimension" />
        <attr name="mn_spinSpeed" format="float" />
        <attr name="mn_barSpinCycleTime" format="integer" />
        <attr name="mn_circleRadius" format="dimension" />
        <attr name="mn_fillRadius" format="boolean" />
        <attr name="mn_barWidth" format="dimension" />
        <attr name="mn_linearProgress" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="reference|dimension" />
        <attr name="civ_border_color" format="reference|color" />
        <attr name="civ_border_overlay" format="reference|boolean" />
        <attr name="civ_circle_background_color" format="reference|color" />
        <attr name="civ_fill_color" format="reference|color" />
    </declare-styleable>
</resources>